<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WelcomeActivity">
    <TextView
        android:id="@+id/tv_code"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/trans_bg"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>
    <ImageView
        android:id="@+id/splash_logo"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_56"
        android:textColor="@color/tx333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintWidth_percent="0.7"
        android:lineSpacingMultiplier="1.5"
        android:text="无需公司资质免签约，即时到账资金直接到个人账号，不经过第三方收款更快捷，资金安全有保障。系统支持自建支付网站,接入云平台,安全可靠"
        app:layout_constraintTop_toBottomOf="@id/splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

     <TextView
         android:background="@drawable/btn_select_def"
         app:layout_constraintVertical_bias="0.78"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:id="@+id/btn_router"
         android:paddingTop="@dimen/dp_8"
         android:textSize="@dimen/sp_16"
         android:textColor="@color/white"
         android:text="立即开启"
         android:paddingStart="@dimen/dp_40"
         android:paddingEnd="@dimen/dp_40"
         android:paddingBottom="@dimen/dp_8"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>